<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/thasbih2"
    android:onClick="btn_Count"
    android:orientation="vertical"
    tools:context="com.labbayak.etab.Login_Activity" >

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:text="E-Tasbih"
        android:textColor="#ffffff"
        android:textSize="35sp" />
    
<!--     <Button -->
<!--         android:id="@+id/button1" -->
<!--         style="?android:attr/buttonStyleSmall" -->
<!--         android:layout_width="match_parent" -->
<!--         android:layout_height="170dp" -->
<!--         android:layout_marginTop="30dp" -->
<!--         android:background="#89CFF0" -->
<!--         android:onClick="btn_Count" -->
<!--         android:text="Tap Here to Count" -->
<!--         android:textColor="#FFFFFF" -->
<!--         android:textSize="16sp" /> -->

    <TextView
        android:id="@+id/tv_fajar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Tap anywere to start count"
        android:textColor="#fff"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="60dp"
        android:text="Today Your Count is :"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/tv_TodayCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="80sp" />

    <LinearLayout
        android:id="@+id/LL_Today"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="87dp"
        android:visibility="visible" >

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:text="Total Count is :"
            android:textColor="#fff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_TotalCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:text="0"
            android:textColor="#fff"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="20dp" >

         <Button
             android:id="@+id/button3"
             style="?android:attr/buttonStyleSmall"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:onClick="btn_TodayCount"
             android:visibility="gone"
             android:text="Daily Count"
             android:textColor="#fff" />

         <Button
             android:id="@+id/btn_cityok"
             style="?android:attr/buttonStyleSmall"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:onClick="ReSetValues"
             android:text="Re-set"
             android:textColor="#fff" />
 
    </LinearLayout>

</LinearLayout>
